---
import GradiantText from "../../../shared/GradiantText.astro";
import Paragraph from "../../../shared/Paragraph.astro";
import SubTitle2 from "../../../shared/SubTitle2.astro";
import Title3 from '../../../shared/Title3.astro'

export interface Props {
  className?: string;
  subheading: { text1_1: string; text1_2: string; text2: string };
}

const { subheading, className = "" } = Astro.props;
---

<div class=`${className}  rounded-xl m-5`>
  <div class="flex flex-col justify-start font-sans">
    <SubTitle2>
      {subheading.text1_1}
    </SubTitle2>
  </div>
  <div class="flex flex-col justify-start">
    <Paragraph className="text-lg md:text-xl font-normal">
      {subheading.text2}
    </Paragraph>
  </div>
 <GradiantText> <Title3 className="mt-8">{subheading.text1_2}</Title3> </GradiantText>
</div>
